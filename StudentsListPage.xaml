<Page x:Class="RoboticsStudents.StudentsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoboticsStudents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsListPage">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Группа:" Margin="5"/>
                <ComboBox Width="100" Margin="5"/>
                <Button Name="Import" Content="Импорт" Click="Import_Click" Background="#FF40446D" Foreground="White"/>
                <Button Name="Export" Content="Экспорт" Click="Export_Click" Background="#FF40446D" Foreground="White"/>
            </StackPanel>
            <DataGrid x:Name="Students" ColumnWidth="*" IsReadOnly="True" SelectionMode="Single" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
